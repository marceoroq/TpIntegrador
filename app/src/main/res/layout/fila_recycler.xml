<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSerie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/fondoCard"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="1dp"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rowNombrePropiedad"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:hint="nombre"
                    android:textColor="#0B0A0A"></TextView>

                <TextView
                    android:id="@+id/rowPrecioPropiedad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Precio"
                    android:textColor="#0B0A0A"></TextView>

                <TextView
                    android:id="@+id/rowCapacidadPropiedad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="capacidad"
                    android:textColor="#0B0A0A"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Internet:" />

                        <TextView
                            android:id="@+id/internetInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="59dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="60dp"
                            android:layout_weight="1"
                            android:text="Mascotas:" />

                        <TextView
                            android:id="@+id/mascotaInfo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LAT:" />

                    <TextView
                        android:id="@+id/tvLatitud"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10.0" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LON" />

                    <TextView
                        android:id="@+id/tvLongitud"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="10.0" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnVerEnMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver en Mapa"
                    android:textSize="10sp"
                    card_view:iconPadding="4dp" />

                <Button
                    android:id="@+id/rowBtnReservar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reservar >"
                    android:textSize="12sp"></Button>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>